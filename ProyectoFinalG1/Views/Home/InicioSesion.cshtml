@{
    ViewBag.Title = "Inicio de Sesión";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- SEO Meta Tags -->
    <meta name="description" content="Inicio Sesión">
    <meta name="author" content="G1">

    <!-- Webpage Title -->
    <title>Inicio Sesión</title>

    <link href="/Template/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Template/css/fontawesome-all.min.css" rel="stylesheet">
    <link href="/Template/css/swiper.css" rel="stylesheet">
    <link href="/Template/css/styles.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chilanka&family=Montserrat:wght@300;400;500&display=swap"
          rel="stylesheet">

</head>
<body>
    <header>
        <section id="register"
                 class="py-5"
                 style="background: url('@Url.Content("~/Template/images/background-img.png")') center / cover no-repeat;">

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                        <div class="text-box mt-5 mb-5 text-center">
                            <h1 class="mb-4">Inicio de Sesión</h1>
                            <p class="mb-4">
                                Bienvenidos a Waggy.
                                <br/>¿No tienes una cuenta?
                                <a class="blue" href="Registro.html">Crear Cuenta</a>
                            </p>

                            <form>

                                <div class="mb-4 form-floating">
                                    <input type="text"
                                           class="form-control"
                                           id="nombre"
                                           placeholder="Tu nombre">
                                    <label for="nombre">Nombre completo</label>
                                </div>

                                <div class="mb-4 form-floating">
                                    <input type="password"
                                           class="form-control"
                                           id="password"
                                           placeholder="Contraseña">
                                    <label for="password">Contraseña</label>
                                </div>

                                <button type="submit"
                                        class="btn btn-warning btn-lg w-100 rounded-pill">
                                    Iniciar Sesión
                                </button>
                            </form>

                        </div>

                    </div>
                </div>
            </div>

        </section>

    </header>

    <script src="/Template/js/bootstrap.min.js"></script>
    <script src="/Template/js/swiper.min.js"></script> 
    <script src="/Template/js/purecounter.min.js"></script> 
    <script src="/Template/js/replaceme.min.js"></script> 
    @*<script src="/Template/js/scripts.js"></script>*@ 
</body>
</html>